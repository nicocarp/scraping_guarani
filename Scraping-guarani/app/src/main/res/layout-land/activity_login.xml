<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="horizontal"
    android:background="@color/colorBlanco"
    tools:context="com.example.nicoc.scraping_guarani.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

        </LinearLayout>

        <include
            android:id="@+id/include"
            layout="@layout/footer"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="58dp" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="@string/usuario_campo"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorNegro"
            android:textSize="18sp"
            android:typeface="sans"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="64dp"
            android:layout_above="@+id/txtPassword"
            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignStart="@+id/linearLayout6" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="@string/contrasenia_campo"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/colorNegro"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/txtUsername"
            android:layout_alignStart="@+id/txtUsername" />

        <CheckBox
            android:id="@+id/checkBoxRememberMe"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Recordarme"
            android:layout_below="@+id/txtPassword"
            android:layout_alignLeft="@+id/txtPassword"
            android:layout_alignStart="@+id/txtPassword"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="181dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="@string/login_button"
            android:textAllCaps="false"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_below="@+id/checkBoxRememberMe"
            android:layout_alignRight="@+id/txtPassword"
            android:layout_alignEnd="@+id/txtPassword" />

        <ImageView
            android:id="@+id/imageLabel"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:layout_alignBottom="@+id/txtPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            android:id="@+id/iniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_weight="0.21"
            android:fontFamily="cursive"
            android:text="@string/iniciarsesion_titulo"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_above="@+id/txtUsername"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_alignStart="@+id/btnLogin" />

    </RelativeLayout>
</ScrollView>